      //문자(한글자), 문자열(여러글자)
      //char c = 'A';
      //printf("%c\n", c);

      char str[256];    # 256개 까지 문자를 받을 수 있음
      scanf_s("%s", str, sizeof(str));  # 문자열을 받을 때는 &표시 안씀   # sizeof: 문자열을 쓸 수 있는 공간의 크기를 알려줌
      printf("%s\n", str);

  # 프로젝트
    	// 프로젝트
      // 경찰관이 범죄자의 정보를 입수 (조서 작성)
      // 이름? 나이? 몸무게? 키? 범죄명?
      char name[256];
      printf("이름이 뭐에요?");
      scanf_s("%s", name, sizeof(name));

      int age;
      printf("몇살이에요?");
      scanf_s("%d", &age);

      float weight;
      printf("몸무게는 몇 kg 이예요?");
      scanf_s("%f", &weight);

      double height;
      printf("키는 몇 cm 에요?");
      scanf_s("%lf", &height);

      char what[256];
      printf("무슨 범죄를 저질렀어요?");
      scanf_s("%s", what, sizeof(what));

      // 조서 내용 출력
      printf("\n\n--- 범죄자 정보 ---\n\n");
      printf("이름	: %s\n", name);
      printf("나이	: %d\n", age);
      printf("몸무게	: %.2f\n", weight);
      printf("키	: %.2lf\n", height);
      printf("범죄	: %s\n", what);

# 피라미드를 쌓아라
  # 뿔뿔(++)
    소스파일에 loop.c 생성

    #include <stdio.h>

    int main(void)    # 오류발생: 경찰서 조서때에 main이 이미 쓰였기 때문 -> 이전 파일의 main을 main_printfscanf 로 변경
    {
      /*int a = 10;
      printf("a 는 %d\n", a);
      a++;
      printf("a 는 %d\n", a);
      a++;
      printf("a 는 %d\n", a);*/

      //int b = 20;
      // ++ : ex) b = b + 1
      //printf("b 는 %d\n", ++b);  // ++ 처리 후 문장 수행
      //printf("b 는 %d\n", b++);  // 문장 수행 후 ++ 처리
      //printf("b 는 %d\n", b);

      int i = 1;
      printf("Hello World %d\n", i++);	//1
      printf("Hello World %d\n", i++);	//2
      printf("Hello World %d\n", i++);
      printf("Hello World %d\n", i++);
      printf("Hello World %d\n", i++);
      return 0;
    }

  # for
    //for (선언; 조건; 증감;) { }
    for (int i = 1; i <= 10; i++)
    {
      printf("Hello World %d\n", i);
    }

  # while
    // while (조건) { }
    int i = 1;
    while (i <= 10)
    {
      printf("Hello World %d\n", i++);
    }

  # do while
    // do { } while (조건);
    int i = 1;
    do {
      printf("Hello World %d\n", i++);
    } while (i <= 10);

  # 이중 반복문(구구단)
    // 2중 반복문
    for (int i = 1; i <= 3; i++)
    {
      printf("첫 번째 반복문 : %d\n", i);

      for (int j = 1; j <= 5; j++)
      {
        printf("    두 번째 반복문 : %d\n", j);
      }
    }

    // 구구단
    for (int i = 2; i <= 9; i++)
    {
      printf("%d단 계산\n", i);
      for (int j = 1; j <= 9; j++)
        printf("  %d X %d = %d\n", i, j, i * j);
    }

  # 이중 반복문 파헤치기(별 그리기)
    *
    **
    ***
    ****
    *****
    for (int i = 0; i < 5; i++)
    {
      for (int j = 0; j <= i; j++)
      {
        printf("*");
      }
      printf("\n");
    }

  # 이중 반복문 (거꾸로 별)
        *
       **
      ***
     ****
    *****
    for (int i = 0; i < 5; i++)
    {
      for (int j = i; j < 5 - 1; j++)
      {
        printf(" ");              # 띄어쓰기를 넣어줌
      }
      for (int k = 0; k <= i; k++)
      {
        printf("*");
      }
      printf("\n");
    }

  # 프로젝트
    // 피라미드를 쌓아라 - 프로젝트
        *
       ***
      *****
     *******
    *********

      int floor;
      printf("몇 층으로 쌓겠느냐?");
      scanf_s("%d", &floor);
      for (int i = 0; i < floor; i++)
      {
        for (int j = i; j < floor - 1; j++)
        {
          printf(" ");
        }
        for (int k = 0; k < i * 2 + 1; k++)   # 1, 3, 5, 7, ...
        {
          printf("*");
        }
        printf("\n");
      }

# Up & Down
  * 새로운 파일 만들기 전에 main -> mainloop 변경
  * 소스파일 우클릭 -> 추가 -> 새항목 -> condition.c 생성
  # if else
    #include<stdint.h>

    int main(void)
    {
      // 버스를 탄다고 가정. 학생 / 일반인으로 구분 (일반인 : 20세)
      int age = 15;
      // if (조건) { ... } else { ... }
      if (age >= 20)
      {
      	printf("일반인 입니다");
      }
      else
      {
      	printf("학생입니다\n");
      }

      // 초등학생(8~13) / 중학생(14~16) / 고등학생(17~19)
      // if / else if / else
      int age = 25;
      if (age >= 8 && age <= 13)	// && : and를 의미함
      {
        printf("초등학생입니다\n");
      }
      else if (age >= 14 && age <= 16)
      {
        printf("중학생입니다\n");
      }
      else if (age >= 17 && age <= 19)
      {
        printf("고등학생입니다\n");
      }
      else
      {
        printf("학생이아닌가봐요\n");
      }
  
  # break continue
    	// break(탈출) / continue(넘김)
      // 1번부터 30번까지 있는 반에서 1번에서 5번까지 조별 발표를 합니다.
      for (int i = 1; i <= 30; i++)
      {
        if (i >= 6)
        {
          printf("나머지 학생은 집에 가세요\n");
          break;
        }
        printf("%d 번 학생은 조별 발표 준비를 하세요\n", i);
      }

      // 1번부터 30번까지 있는 반에서 7번 학생은 아파서 결석
      // 7번을 제외하고 6번부터 10번까지 조별 발표를 하세요
      for (int i = 1; i <= 30; i++)
      {
        if (i >= 6 && i <= 10)
        {
          if (i == 7)
          {
            printf("%d 번 학생은 결석입니다\n", i);
            continue;
          }
          printf("%d 번 학생은 조별 발표 준비를 하세요\n", i);
        }
      }

  # and or
    // && ||
    int a = 10;
    int b = 10;
    int c = 12;
    int d = 13;
    if (a == b || c == d) # or
    {
      printf("a 와 b, 혹은 c 와 d 의 값이 같습니다.\n");
    }
    else
    {
      printf("값이 서로 다르네요\n");
    }

  # 랜덤
    #include <time.h>
    // #include <stdlib.h>	// 위에꺼로만 안될 때 적음
    #include <stdio.h>

    int main(void)
    {
      printf("난수 초기화 이전...\n");
      for (int i = 0; i < 10; i++)
      {
        printf("%d", rand() % 10);    # 항상 같은 숫자 나옴
      }

      srand(time(NULL)); // 난수 초기화
      printf("\n\n난수 초기화 이후...\n");
      for (int i = 0; i < 10; i++)
      {
        printf("%d", rand() % 10);    # 랜덤한 숫자 나옴
      }
      return 0;
    }

  # switch case
    
