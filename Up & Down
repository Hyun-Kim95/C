# Up & Down
  * 새로운 파일 만들기 전에 main -> mainloop 변경
  * 소스파일 우클릭 -> 추가 -> 새항목 -> condition.c 생성
  # if else
    #include<stdint.h>

    int main(void)
    {
      // 버스를 탄다고 가정. 학생 / 일반인으로 구분 (일반인 : 20세)
      int age = 15;
      // if (조건) { ... } else { ... }
      if (age >= 20)
      {
      	printf("일반인 입니다");
      }
      else
      {
      	printf("학생입니다\n");
      }

      // 초등학생(8~13) / 중학생(14~16) / 고등학생(17~19)
      // if / else if / else
      int age = 25;
      if (age >= 8 && age <= 13)	// && : and를 의미함
      {
        printf("초등학생입니다\n");
      }
      else if (age >= 14 && age <= 16)
      {
        printf("중학생입니다\n");
      }
      else if (age >= 17 && age <= 19)
      {
        printf("고등학생입니다\n");
      }
      else
      {
        printf("학생이아닌가봐요\n");
      }
  
  # break continue
    	// break(탈출) / continue(넘김)
      // 1번부터 30번까지 있는 반에서 1번에서 5번까지 조별 발표를 합니다.
      for (int i = 1; i <= 30; i++)
      {
        if (i >= 6)
        {
          printf("나머지 학생은 집에 가세요\n");
          break;
        }
        printf("%d 번 학생은 조별 발표 준비를 하세요\n", i);
      }

      // 1번부터 30번까지 있는 반에서 7번 학생은 아파서 결석
      // 7번을 제외하고 6번부터 10번까지 조별 발표를 하세요
      for (int i = 1; i <= 30; i++)
      {
        if (i >= 6 && i <= 10)
        {
          if (i == 7)
          {
            printf("%d 번 학생은 결석입니다\n", i);
            continue;
          }
          printf("%d 번 학생은 조별 발표 준비를 하세요\n", i);
        }
      }

  # and or
    // && ||
    int a = 10;
    int b = 10;
    int c = 12;
    int d = 13;
    if (a == b || c == d) # or
    {
      printf("a 와 b, 혹은 c 와 d 의 값이 같습니다.\n");
    }
    else
    {
      printf("값이 서로 다르네요\n");
    }

  # 랜덤
    #include <time.h>
    // #include <stdlib.h>	// 위에꺼로만 안될 때 적음
    #include <stdio.h>

    int main(void)
    {
      printf("난수 초기화 이전...\n");
      for (int i = 0; i < 10; i++)
      {
        printf("%d", rand() % 10);    # 항상 같은 숫자 나옴
      }

      srand(time(NULL)); // 난수 초기화
      printf("\n\n난수 초기화 이후...\n");
      for (int i = 0; i < 10; i++)
      {
        printf("%d", rand() % 10);    # 랜덤한 숫자 나옴
      }
      return 0;
    }

  # switch case
    # if문 이용
    	// 가위 0 바위 1 보 2
      //srand(time(NULL));
      //int i = rand() % 3; // 0 ~ 2 반환
      //if (i == 0)
      //{
      //	printf("가위\n");
      //}
      //else if (i == 1)
      //{
      //	printf("바위\n");
      //}
      //else if (i == 2)
      //{
      //	printf("보\n");
      //}
      //else
      //{
      //	printf("몰라요\n");
      //}
    # switch case 이용
      srand(time(NULL));
      int i = rand() % 3; // 0 ~ 2 반환
      switch (i)
      {
      case 0:printf("가위\n"); break;   # case의 조건을 만족하는 줄 이후는 조건 확인 없이 무조건 실행되기 때문에 break를 꼭 써줘야 함
      case 1:printf("바위\n"); break;
      case 2:printf("보\n"); break;
      default:printf("몰라요\n"); break;
      }
    # 위에 나이구분에 적용
    	int age = 9;
      switch (age)
      {
      case 8:
      case 9:
      case 10:
      case 11:
      case 12:
      case 13:printf("초등학생입니다\n"); break;
      case 14:
      case 15:
      case 16:printf("중학생입니다\n"); break;
      case 17:
      case 18:
      case 19:printf("고등학생입니다\n"); break;
      default:printf("학생이 아닌가봐요\n"); break;
      }

  # 프로젝트
    // Up and Down
    srand(time(NULL));
    int num = rand() % 100 + 1;   // 1 ~ 100 사이의 숫자
    printf("숫자: %d\n", num);
    int answer = 0;               // 정답
    int chance = 5;               // 기회
    while (1)	                    // 1: 참	0: 거짓
    {
      printf("남은 기회 %d 번 \n", chance--);
      printf("숫자를 맞혀보세요 (1~100) : ");
      scanf_s("%d", &answer);

      if (answer > num)
      {
        printf("Down ↓\n\n");
      }
      else if (answer < num)
      {
        printf("Up ↑\n\n");
      }
      else if (answer == num)
      {
        printf("정답입니다! \n\n");
        break;
      }
      else
      {
        printf("알 수 없는 오류가 발생했어요\n\n");
      }

      if (chance == 0)
      {
        printf("모든 기회를 다 사용하셨네요. 정답: %d\n", num);
        break;
      }
    }
